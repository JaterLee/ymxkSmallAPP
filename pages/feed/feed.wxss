/* pages/feed/feed.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
}

.clubsView {
  display: flex;
  flex-direction: column;
  height: 50%;
  align-items: center;
  background-color: rgba(211, 211, 211, 0.397);
}

.bannerItemView {
  display: flex;
  align-items: center;
  border: solid;
  border-radius: 10rpx;
  border-width: 1rpx;
  border-color: lightgray;
  background-color: white;
  height: 150rpx;
  width: 90%;
  margin-top: 10rpx;
}

.item-image {
  border-radius: 50rpx;
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.bannerContentView {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item-title {
  font-size: 20px;
}

.item-des {
  font-size: 15px;
  color: gray;
}

.moreTipView {
  margin-top: 10px;
  font-size: 15px;
  color: gray;
}
